<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_hospital_admission_list" model="ir.ui.view">
        <field name="name">hospital.admission.list</field>
        <field name="model">hospital.admission</field>
        <field name="arch" type="xml">
            <list decoration-danger="urgency_level=='emergency'" decoration-warning="urgency_level=='urgent'">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="appointment_datetime"/>
                <field name="specialist_id"/>
                <field name="urgency_level"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'triage'" decoration-success="state == 'admitted'"/>
            </list>
        </field>
    </record>

    <record id="view_hospital_admission_form" model="ir.ui.view">
        <field name="name">hospital.admission.form</field>
        <field name="model">hospital.admission</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_admit" string="Admit" type="object" class="oe_highlight" invisible="state not in ['draft', 'triage']"/>
                    <button name="action_done" string="Done" type="object" class="oe_highlight" invisible="state != 'admitted'"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state in ['done', 'cancelled']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,triage,admitted,done"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="patient_id"/>
                        <field name="urgency_level"/>
                        <field name="has_appointment"/>
                        <field name="appointment_datetime" invisible="not has_appointment" required="has_appointment"/>
                        <field name="specialist_id" invisible="not has_appointment"/>
                        <field name="has_social_insurance"/>
                        <field name="social_insurance_id" invisible="not has_social_insurance"/>
                        <field name="copayment_amount" invisible="not has_social_insurance"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="triage_required" invisible="1"/>
                        <field name="triage_notes" invisible="not triage_required"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hospital_admission_kanban" model="ir.ui.view">
        <field name="name">hospital.admission.kanban</field>
        <field name="model">hospital.admission</field>
        <field name="arch" type="xml">
            <kanban default_group_by="urgency_level" sample="1">
                <field name="urgency_level"/>
                <field name="patient_id"/>
                <field name="name"/>
                <field name="state"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><t t-esc="record.patient_id.value"/></strong>
                                </div>
                                <span class="badge" t-att-class="{'badge-info': record.state.raw_value == 'draft', 'badge-warning': record.state.raw_value == 'triage', 'badge-success': record.state.raw_value == 'admitted'}">
                                    <t t-esc="record.state.value"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <t t-esc="record.name.value"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <span class="badge" t-att-class="{'badge-info': record.urgency_level.raw_value == 'normal', 'badge-warning': record.urgency_level.raw_value == 'urgent', 'badge-danger': record.urgency_level.raw_value == 'emergency'}">
                                        <t t-esc="record.urgency_level.value"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_hospital_admission" model="ir.actions.act_window">
        <field name="name">Admissions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.admission</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Register a new admission
          </p>
        </field>
    </record>
</odoo>
